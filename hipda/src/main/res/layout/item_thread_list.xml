<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?list_item_background"
    android:padding="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/iv_avatar"
            android:padding="4dp"
            android:src="@drawable/google_user" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="4dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="?attr/color_hipda" />

                <ImageView
                    android:id="@+id/iv_image_indicator"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="2dp"
                    android:layout_toLeftOf="@+id/tv_replycounter"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@string/iv_thread_indicator"
                    android:src="@drawable/ic_action_image"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_replycounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toLeftOf="@+id/tv_viewcounter"
                    android:layout_alignParentBottom="true"
                    android:drawableLeft="@drawable/tapatalk_topic_icon"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="?android:textColorSecondary" />

                <TextView
                    android:id="@+id/tv_viewcounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="8dp"
                    android:drawableLeft="@drawable/tapatalk_view_icon"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="?android:textColorSecondary" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/background_grey"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tv_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/background_grey"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="top" />

    </LinearLayout>


</LinearLayout>