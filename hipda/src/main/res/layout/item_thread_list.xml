<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?list_item_background"
    android:orientation="vertical"
    android:padding="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="32dp"
        android:paddingBottom="2dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:padding="2dp" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_avatar"
            android:padding="4dp"
            android:singleLine="true"
            android:text=""
            android:textColor="?attr/color_hipda"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text=""
            android:textSize="15sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_image_indicator"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_replycounter"
            android:contentDescription="@string/iv_thread_indicator"
            android:padding="2dp"
            android:src="@drawable/ic_action_image"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_replycounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_viewcounter"
            android:drawableLeft="@drawable/tapatalk_topic_icon"
            android:padding="2dp"
            android:singleLine="true"
            android:text=""
            android:textColor="?android:textColorSecondary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_viewcounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_create_time"
            android:drawableLeft="@drawable/tapatalk_view_icon"
            android:padding="2dp"
            android:singleLine="true"
            android:text=""
            android:textColor="?android:textColorSecondary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:singleLine="true"
            android:text=""
            android:textColor="?android:textColorSecondary"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="4dp"
            android:text=""
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>