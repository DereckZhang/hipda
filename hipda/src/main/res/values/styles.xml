<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ThemeLight" parent="MaterialDrawerTheme.Light">

        <item name="android:actionBarSize">48dp</item>
        <item name="actionBarSize">48dp</item>

        <!-- make ActionMode overlap Toolbar -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/MyActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_tick</item>
        <item name="actionBarPopupTheme">@style/MyToolbar.PopupTheme.Light</item>

        <item name="action_mode_text_color">@android:color/white</item>
        <item name="fabColorNormal">?colorPrimary</item>
        <item name="fabColorPressed">?colorPrimaryDark</item>

        <!-- MaterialDrawer : change smaller drawer item's color -->
        <item name="material_drawer_secondary_text">?material_drawer_primary_text</item>
        <item name="material_drawer_selected_text">?colorAccent</item>
        <!-- Hamburger-Icon color -->
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>

        <!-- change searchView suggestion background color-->
        <item name="android:autoCompleteTextViewStyle">@style/MyAutoCompleteTextView</item>

        <item name="colorPrimary">@color/md_grey_700</item>
        <item name="colorPrimaryDark">@color/md_grey_800</item>
        <item name="colorAccent">@color/hipda</item>

        <item name="android:textColorPrimary">@color/textColorPrimaryLight</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryLight</item>

        <item name="background">@color/day_background</item>
        <item name="list_item_background">@color/day_list_item_background</item>
        <item name="list_item_divider">@color/day_list_item_divider</item>
        <item name="icon_send">@drawable/ic_action_send_now_day</item>
        <item name="icon_download">@drawable/ic_action_download_day</item>

    </style>

    <style name="ThemeLight.DeepOrange" parent="ThemeLight">
        <item name="colorPrimary">@color/md_deep_orange_700</item>
        <item name="colorPrimaryDark">@color/md_deep_orange_800</item>
    </style>

    <style name="ThemeLight.BlueGrey" parent="ThemeLight">
        <item name="colorPrimary">@color/md_blue_grey_700</item>
        <item name="colorPrimaryDark">@color/md_blue_grey_800</item>
    </style>

    <style name="ThemeLight.Indigo" parent="ThemeLight">
        <item name="colorPrimary">@color/md_indigo_700</item>
        <item name="colorPrimaryDark">@color/md_indigo_800</item>
    </style>

    <style name="ThemeLight.Teal" parent="ThemeLight">
        <item name="colorPrimary">@color/md_teal_700</item>
        <item name="colorPrimaryDark">@color/md_teal_800</item>
    </style>

    <style name="ThemeDark" parent="MaterialDrawerTheme">

        <item name="android:actionBarSize">48dp</item>
        <item name="actionBarSize">48dp</item>

        <!-- make ActionMode overlap Toolbar -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/MyActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_tick</item>
        <item name="actionBarPopupTheme">@style/MyToolbar.PopupTheme.Dark</item>

        <item name="action_mode_text_color">@android:color/white</item>
        <item name="fabColorNormal">@color/md_grey_600</item>
        <item name="fabColorPressed">@color/md_grey_800</item>

        <!-- MaterialDrawer : change smaller drawer item's color -->
        <item name="material_drawer_secondary_text">?material_drawer_primary_text</item>
        <item name="material_drawer_selected_text">?colorAccent</item>

        <!-- change searchView suggestion background color-->
        <item name="android:autoCompleteTextViewStyle">@style/MyAutoCompleteTextView</item>

        <item name="colorPrimary">@color/md_grey_800</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
        <item name="colorAccent">@color/hipda</item>

        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryDark</item>

        <item name="background">@color/night_background</item>
        <item name="list_item_background">@color/night_list_item_background</item>
        <item name="list_item_divider">@color/night_list_item_divider</item>
        <item name="icon_send">@drawable/ic_action_send_now_night</item>
        <item name="icon_download">@drawable/ic_action_download_night</item>

    </style>

    <style name="ThemeBlack" parent="ThemeDark">
        <item name="list_item_background">@color/black</item>
    </style>


    <style name="MyActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/black</item>
        <item name="titleTextStyle">@style/MyActionModeTitleStyle</item>
        <item name="subtitleTextStyle">@style/MyActionModeSubtitleStyle</item>
    </style>

    <style name="MyActionModeTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?action_mode_text_color</item>
        <!--<item name="android:textSize">20sp</item>-->
    </style>

    <style name="MyActionModeSubtitleStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Subtitle">
        <item name="android:textColor">?action_mode_text_color</item>
    </style>

    <style name="MyAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:popupBackground">?background</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyToolbar.PopupTheme.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="MyToolbar.PopupTheme.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!-- FAB Style-->
    <style name="FloatingButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">?fabColorNormal</item>
        <item name="fab_colorPressed">?fabColorPressed</item>
    </style>

</resources>