<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Theme Day. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/light_blue_700</item>
        <item name="colorPrimaryDark">@color/light_blue_800</item>
        <item name="colorAccent">@color/hipda</item>

        <item name="android:actionBarSize">48dp</item>
        <item name="actionBarSize">48dp</item>

        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <!--<item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>-->
        <!--<item name="android:actionMenuTextColor">@color/white</item>-->

        <!-- Support library compatibility -->
        <!--<item name="actionBarStyle">@style/MyActionBar</item>-->
        <!--<item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>-->
        <!--<item name="actionMenuTextColor">@color/white</item>-->

        <item name="themeName">day</item>
        <item name="background">@color/day_background</item>
        <item name="list_item_background">@color/day_list_item_background</item>
        <item name="detail_background">@color/day_detail_background</item>
        <item name="img_background">@color/day_img_background</item>
        <item name="replyBarBackground">@color/day_replybarbackground</item>
        <item name="quote_text_background">@color/day_quote_text_background</item>
        <item name="list_item_divider">@color/day_list_item_divider</item>
        <item name="icon_refresh">@drawable/ic_action_refresh_day</item>
        <item name="icon_send">@drawable/ic_action_send_now_day</item>
        <item name="icon_reply">@drawable/tapatalk_bubble_quote_day</item>
        <item name="icon_quote">@drawable/tapatalk_bubble_multi_day</item>
        <item name="icon_website">@drawable/ic_action_web_site_day</item>
        <item name="icon_goto_page">@drawable/tapatalk_bubble_move_day</item>
        <item name="icon_settings">@drawable/ic_action_settings_day</item>
        <item name="icon_download">@drawable/ic_action_download_day</item>
        <item name="icon_copy">@drawable/ic_action_copy_day</item>
        <item name="icon_upload_img">@drawable/ic_action_new_picture_day</item>
        <item name="icon_search">@drawable/ic_action_search_day</item>
        <item name="icon_send_sms">@drawable/tapatalk_bubble_reply_day</item>
        <item name="icon_edit">@android:drawable/ic_menu_edit</item>
        <item name="color_hipda">@color/hipda</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/light_blue_700</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- Theme Night. -->
    <style name="ThemeNight" parent="Theme.AppCompat">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="themeName">night</item>
        <item name="background">@color/night_background</item>
        <item name="list_item_background">@color/night_list_item_background</item>
        <item name="detail_background">@color/night_detail_background</item>
        <item name="img_background">@color/night_img_background</item>
        <item name="replyBarBackground">@color/night_replybarbackground</item>
        <item name="quote_text_background">@color/night_quote_text_background</item>
        <item name="list_item_divider">@color/night_list_item_divider</item>
        <item name="icon_refresh">@drawable/ic_action_refresh_night</item>
        <item name="icon_send">@drawable/ic_action_send_now_night</item>
        <item name="icon_reply">@drawable/tapatalk_bubble_quote_night</item>
        <item name="icon_quote">@drawable/tapatalk_bubble_multi_night</item>
        <item name="icon_website">@drawable/ic_action_web_site_night</item>
        <item name="icon_goto_page">@drawable/tapatalk_bubble_move_night</item>
        <item name="icon_settings">@drawable/ic_action_settings_night</item>
        <item name="icon_download">@drawable/ic_action_download_night</item>
        <item name="icon_copy">@drawable/ic_action_copy_night</item>
        <item name="icon_upload_img">@drawable/ic_action_new_picture_night</item>
        <item name="icon_search">@drawable/ic_action_search_night</item>
        <item name="icon_send_sms">@drawable/tapatalk_bubble_reply_night</item>
        <item name="icon_edit">@android:drawable/ic_menu_edit</item>
        <item name="color_hipda">@color/hipda</item>
        <item name="android:actionBarStyle">@style/NightActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DayActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NightActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/background_silver</item>
    </style>

</resources>